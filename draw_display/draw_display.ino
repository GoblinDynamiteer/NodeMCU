void loop()
{
    /* Get command from bluetooth serial */
    char * data;
    data = readSerial();

    /* Switch on first char in sent command */
    switch (data[0])
    {
        case 'C': // Clear/Reset

            update = true;

            break;

        default:
            break;
    }

    if(update)
    {
        updateScreen();
        update = false;
    }
}

/* Read serial command (from bluetooth) */
char * readSerial()
{
    char command[SERIAL_BUFFER_SIZE + 1];

    int command_size = Serial.readBytesUntil(
        COMMAND_END,
        command,
        SERIAL_BUFFER_SIZE
    );

    if(command_size > 0)
    {
        command[command_size] = '\0';
        return command;
    }

    return "0";

}

